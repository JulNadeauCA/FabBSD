MAN1=nroff.1
NAMEPREFIX=$(g)
CLEANADD=nroff

all: nroff

nroff: nroff.sh
	rm -f $@
	sed "$(SH_SCRIPT_SED_CMD)"  $(srcdir)/nroff.sh >$@
	chmod +x $@

install_data: nroff
	-rm -f $(bindir)/$(NAMEPREFIX)nroff
	$(INSTALL_PROGRAM) nroff $(bindir)/$(NAMEPREFIX)nroff

uninstall_sub:
	-rm -f $(bindir)/$(NAMEPREFIX)nroff
