if [ "X${DESTDIR}" = "X" ]; then
	echo DESTDIR must be set
	exit 1
fi

TMP=`mktemp /tmp/_ckr.XXXXXXXXXX` || exit 1
trap 'rm -f $TMP' 0 1 15

sh makeflist > $TMP
( cd $DESTDIR ; find . \( -type d -o -type f -o -type l \) ) | \
    grep -v -e '^\./snapshot' -e '^.$' | sort -H | diff $TMP - 
